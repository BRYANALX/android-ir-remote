<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/remote_background"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal = "true"
        android:orientation="vertical"
        android:weightSum="5"
        android:layout_margin="5dp"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:orientation="horizontal"
            android:weightSum="1"
            >
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="POWER ALL"
                android:id="@+id/id_Button_ALL"
                android:background="@color/remote_button"
                android:src="@drawable/icon_02"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:layout_margin="5dp"
                android:textColor="@color/remote_text"
                />

        </LinearLayout>
    <LinearLayout
        android:id="@+id/id_Layout_Row_01"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:orientation="horizontal"
        android:weightSum="3"
        >

    </LinearLayout>
        <LinearLayout
            android:id="@+id/id_Layout_Row_02"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:orientation="horizontal"
            android:weightSum="3"
            >

        </LinearLayout>
        <LinearLayout
            android:id="@+id/id_Layout_Row_03"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:orientation="horizontal"
            android:weightSum="3"
            >


        </LinearLayout>
        <LinearLayout
            android:id="@+id/id_Layout_Row_04"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:orientation="horizontal"
            android:weightSum="3"
            >

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/id_Button_6"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="128dp"
        android:layout_weight="1"
        android:text="NINTENDO SWITCH"/>


</RelativeLayout>
